<h4 class="all_trips p-3">All Trips</h4>
<div class="map_align">

  <div class="background_all_trips">

    <div id="form_two">
      <%= form_tag trips_path, method: :get do %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a Location"%>
        <button id="best_button" class="anti_link btn" data-mdb-ripple-color="dark"><%= submit_tag "Search" %></button>
      <% end %>
    </div>

      <div class="cards">
        <% @trips.each do |trip|%>
          <% if trip.photo.attached? %>
            <div class=" card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path trip.photo.key, height: 300, crop: :fill %>')">
          <% else %>
            <h4>"No pictures"</h4>
          <% end %>
            <div class="card_funitions">
                <button class="anti_link btn" id="best_buttons_two" data-mdb-ripple-color="dark" id="destination"><%=link_to trip.destination, trip_path(trip)%></button>
              <div class="delet_and_edit">
                <button class="anti_link btn" id="info delete_edit" ><%= link_to 'Delete here', trip_path(trip),
                  method: :delete,
                  data: { confirm: "Are you sure?" }%></button>
                <button class="anti_link btn" id="info delete_edit" ><%= link_to 'Edit here', edit_trip_path(trip),
                  method: :get,
                  data: { confirm: "Are you sure?" }%></button>
              </div>
            </div>
          </div>
        <% end %>
      </div>

  </div>

  <div id="map"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
